<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editar Produto</title>
  <base href="/editarProduto/:id">
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <header class="cabecalho">
    <img src="menu.png" alt="menu" height="30px" class="menu-hamburguer" />
    <nav class="menu-navegacao">
      <ul>
        <li><a href="/produtos">Home</a></li>
        <li><a href="/perfilEmpresarial">Perfil</a></li>
        <li><a href="/meusProdutos">Meus Produtos</a></li>
        <li>
          <a
            href="/sair"
            onclick="return confirm('Tem certeza que deseja sair?')"
            >Sair</a
          >
        </li>
      </ul>
    </nav>
  </header>

  <main>
    <h1>EDITAR PRODUTO</h1>
    <form class="edit-form" method="post" action="/editarProduto/<%= produto.id %>" id="form" enctype="multipart/form-data" onsubmit="alert('Produto editado com sucesso!')">
      <section>
        <div>
          <p>NOME</p>
          <input type="text" name="nome" placeholder="Digite o nome do produto" id="atv" value="<%= produto.nome %>">
        </div>
  
        <div class="pai">
          <div>
            <p>VALOR</p>
            <input type="text" name="valor" placeholder="Digite o valor do produto" id="atv" value="<%= produto.valor %>">
          </div>
  
          <div>
            <p>DESCRIÇÃO</p>
            <input type="text" name="descricao" placeholder="Digite a descrição do produto" id="atv" value="<%= produto.descricao %>">
          </div>
        </div>
        <button type="reset" id="env">Apagar</button>
      </section>
  
      <section>
        <div>
          <p>EMPRESA</p>
          <input type="text" name="empresa_id" placeholder="Digite a sua empresa" id="atv" value="<%= produto.empresa_id %>">
        </div>
  
        <div class="pai">
          <div>
            <p>FRETE</p>
            <input type="text" name="frete" placeholder="Digite o frete do produto" id="atv" value="<%= produto.frete %>">
          </div>
  
          <div>
            <p>FOTO</p>
            <input type="file" name="foto" placeholder="Informe uma foto do produto" id="atv" value="<%= produto.foto %>"> 
          </div>
        </div>
        <button type="submit" id="env" class="editar">Enviar</button>
      </section>
  
    </form>
  </main>
  <script>
    const menuHamburguer = document.querySelector(".menu-hamburguer");
      const menuNavegacao = document.querySelector(".menu-navegacao");

      menuHamburguer.addEventListener("click", () => {
        menuNavegacao.style.display =
        menuNavegacao.style.display === "none" ? "block" : "none";
      });
  </script>
</body>

</html>